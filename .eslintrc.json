{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jsdoc/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2023,
    "sourceType": "module"
  },
  "plugins": [
    "jsdoc"
  ],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["warn", 2],
    "no-unused-vars": ["warn"],
    "jsdoc/require-jsdoc": [
      "warn",
      {
        "contexts": [
          "ClassDeclaration",
          "MethodDefinition",
          "FunctionDeclaration"
        ]
      }
    ]
  }
}
